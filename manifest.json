{
  "name": "SCM To 3rd Party",
  "description": "Adds a button to lookup the item on another marketplace (e.g. Buff, Csfloat...)",
  "version": "1.0",
  "manifest_version": 3,
  "host_permissions": [
    "https://raw.githubusercontent.com/*",
    "https://github.com/*"
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "popup/images/icon.png",
    "default_title": "SCM To 3rd Party"
  },
  "icons" : {
    "16": "popup/images/16.png",
    "32": "popup/images/32.png",
    "48": "popup/images/48.png",
    "128": "popup/images/128.png"
  },
  "content_scripts": [
  {
     "js": ["scripts/content.js"],
     "matches": [
       "https://steamcommunity.com/market/listings/730/*"
     ],
     "css": ["scripts/styles/content.css"]
    }
  ],
  "background": {
  "service_worker": "scripts/background.js",
  "type": "module"
  },
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": [
        "scripts/data/marketids.json",
        "scripts/images/buff163icon.png"
      ]
    }
  ]


}